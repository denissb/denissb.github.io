<section class="cv-education">
  <h3>Education</h3>
  {% for education in cv.education %}
    <div class="resume-item">
      <div class="resume-item-title">
        <h4>{{ education.programme }}, {{ education.level }}<br /> {{ education.place }}</h4>
      </div>
      <div class="resume-item-period">
        <p>{{ education.period }},  {{ education.location }}</p>
      </div>
      <div class="resume-item-description">
        <p>{{ education.description }}</p>
      </div>
    </div>
  {% endfor %}
</section>